package com.mycompany.samplecalculator;
import java.util.Scanner;


public class Samplecalculator {
// Mother class
    public static void main(String[] args) {
        // Assining Value to a variable name
        double num1,num2;
        // Calling the class of scanner
        Scanner input = new Scanner(System.in);
        System.out.print("Enter 1st number: ");
        num1 = input.nextDouble();
        System.out.print("Enter 2nd number: ");
        num2 = input.nextDouble();
        //Create an if condition that asking  the user if operation they will use.
        if(condition){}else if(condition){};
       // Calling the child class
        subtraction subtract = new subtraction();
        multiplication multiply = new multiplication();
        division divide = new division();
        addition add = new addition();
        // Calling the methods
        System.out.print(divide.calculate(num1,num2));
        System.out.println(multiply.calculate(num1,num2));
        System.out.println(subtract.calculate(num1,num2));
        System.out.print(add.calculate(num1,num2));
        
        
         
    }
}
